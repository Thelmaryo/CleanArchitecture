@model IEnumerable<College.Models.Activity>

@{
    ViewBag.Title = "Index";
}

<h2>Disciplina: @ViewBag.Discipline</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { disciplineId = ViewBag.DisciplineId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Grades", "Grades", new { activityId = item.Id }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
