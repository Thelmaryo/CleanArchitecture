@model College.Presenters.EvaluationContext.EditGradeViewModel

@{
    ViewBag.Title = "GiveGrade";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Value)
    @Html.HiddenFor(model => model.ActivityId)
    @Html.HiddenFor(model => model.StudentId)
    <h4>Acadêmico: @Model.Student</h4>

    <div class="form-group">
        @Html.LabelFor(model => model.Grade, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Grade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Model.SaveButton.Text" class="btn" style="background-color: @Model.SaveButton.Color; color: @Model.SaveButton.FontColor; border: 1px solid black" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(Model.BackButton.Text, "Grades", new { activityId = Model.ActivityId}, new
     {
         @class = "btn",
         style = $"background-color: {Model.BackButton.Color}; " +
         $"color: {Model.BackButton.FontColor}; " +
         $"border: 1px solid black"
     })
</div>
