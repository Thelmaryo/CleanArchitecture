@model College.Presenters.EvaluationContext.GradeListViewModel

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <th>
            Disciplina
        </th>
        <th>
            Nota
        </th>
        <th>
            Exame Final
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Students)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Discipline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalExam)
            </td>
            <td>
                <span class="label" style="background-color: @item.StatusColor"> @item.Status </span>
            </td>
            <td>
                @Html.ActionLink(item.GradesButton.Text, "ShowGrades", new { disciplineId = item.DisciplineId, enrollmentId = Model.EnrollmentId }, new
                {
                    @class = "btn",
                    style = $"background-color: {item.GradesButton.Color}; " +
                    $"color: {item.GradesButton.FontColor}; " +
                    $"border: 1px solid black"
                })
            </td>
        </tr>
    }

</table>
